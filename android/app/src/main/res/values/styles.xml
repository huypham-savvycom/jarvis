<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="ProgressBarLoading">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:indeterminateDrawable">@drawable/loading_view_animator</item>
    </style>

    <style name="TextViewButtonLogin">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <!-- Navigation -->
    <style name="NavigationBarHeader">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/nav_bar_height</item>
        <item name="android:background">@color/bg_navigation_bar_new</item>
    </style>

    <style name="NavigationButtonRight">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:background">@null</item>
        <item name="android:contentDescription">@string/app_description</item>
        <item name="android:paddingRight">@dimen/dip_12</item>
    </style>

    <style name="NavigationButtonRight.TextView" parent="NavigationButtonRight">
        <item name="android:paddingLeft">@dimen/dip_10</item>
        <item name="android:paddingTop">@dimen/dip_10</item>
        <item name="android:paddingBottom">@dimen/dip_10</item>
        <item name="android:textColor">@color/zk_heart</item>
    </style>

    <style name="NavigationButtonRight.ImageView" parent="NavigationButtonRight">
        <item name="android:paddingLeft">@dimen/dip_2</item>
        <item name="android:paddingTop">@dimen/dip_12</item>
        <item name="android:paddingBottom">@dimen/dip_12</item>
    </style>

    <style name="NavigationButtonLeft">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:background">@null</item>
        <item name="android:contentDescription">@string/app_description</item>
        <item name="android:padding">@dimen/dip_12</item>
    </style>

    <style name="NavigationButtonTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">@dimen/dip_5</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/zk_heart</item>
        <item name="android:textSize">21sp</item>
    </style>

    <style name="NavigationRightContainer">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>

    <style name="NavigationAdditionalContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:background">@null</item>
    </style>
</resources>
